<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content bg-secondary text-primary mx-sm-0 mx-5 border-info">
            <div class="modal-header border border-0">
                <h1 class="modal-title fs-5" id="detailsModalLabel">Purchase Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-0">
                <% for (const data in purchase.info) {%>
                <div class="d-flex flex-row py-2">
                    <div class="fw-bold me-auto"><%= titlizeObjectKey(data) %></div>
                    <div><%= purchase.info[data] %></div>
                </div>
                <% } %>
            </div>
            <div class="modal-footer d-flex flex-column align-items-stretch border-0 pt-0">
                <% if (product.trackUsagePeriod) { %>
                <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#updateModal">Update Usage Period</button>
                <% } %>
                <button class="btn btn-light" data-bs-dismiss="modal">Edit Purchase</button>
                <form class="d-flex flex-column" action="/products/<%= product.path %>/purchases/<%=purchase._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-primary">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
<% if (product.trackUsagePeriod) { %> <%- include("../purchases/updateDates", {purchase: purchase}) %><% } %>
